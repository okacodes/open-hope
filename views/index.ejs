<body>
  <div class="signup-modal-container hidden">
    
    <div class="signup-form-container">
      <div class="close-btn-container">
        <a href="#"><i class="fa-solid fa-x close-btn"></i></a>
      </div>
      <div class="register-head">
        <span>Register</span>
      </div>
      <form class="signup-form" action="/signup" method="POST">
      <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
          <div class="alert alert-danger">
            <%= el.msg %>
          </div>
        <% }) %>
      <% } %>
        <div class="register-field">
          <label for="userName">Username:</label>
          <input type="text" name="userName" placeholder="Username">
        </div>
        <div class="register-field">
          <label for="email">Email:</label>
          <input type="email" name="email" placeholder="Email">
        </div>
        <div class="register-field">
          <label for="password">Password:</label>
          <input type="password" name="password" placeholder="Password">
        </div>
        <div class="register-field">
          <label for="confirmPassword">Confirm Password:</label>
          <input type="password" name="confirmPassword" placeholder="Confirm Password">
        </div>
        <input class="register-btn-modal" type="submit" value="Sign up">
      </form>
    </div>
  </div>
  <div class="header-container">
    <header class="header">
      <img class="open-hope-logo" src="images/open-hope-logo.png" alt="Open Hope Logo">
      <div class="menu-links">
        <a href="#">Home</a>
        <a href="#">Lost a Pet?</a>
        <a href="#">Find a shelter</a>
      </div>
      <div class="menu-login">
        <a class="register-btn" href="#">Sign up</a>
        <a class="login-btn" href="#">Log in</a>
      </div>
    </header>
  </div>
